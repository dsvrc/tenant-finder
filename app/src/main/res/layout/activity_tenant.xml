<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Welcome Chinnu"
        android:textColor="#FF5722"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="112dp"
        android:text="City"
        android:textColor="#200101"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="64dp"
        android:text="Location"
        android:textColor="#270101"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="41dp"
        android:text="Properties:"
        android:textColor="#290401"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="22dp"
        android:text="View all"
        android:textColor="#02136E"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="380dp"
        android:layout_height="375dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/horizontallayoutbg">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="375dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="375dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/building1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@mipmap/download" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="1dp"
                    android:text="Rs 12,000 / Month"
                    android:textColor="#730B0B"
                    android:textSize="25sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="0dp"
                    android:text="Semi Furnished, 1BHK Flat, 1200 sqft."
                    android:textColor="#0C0101"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"

                    android:layout_marginTop="1dp"
                    android:text="Flat no:402, 4th Floor, 5th X roads, infront of Forum Mall, HSR Layout, Bengaluru."
                    android:textColor="#120505"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent" />

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="15dp"

                    android:layout_marginTop="5dp"
                    android:background="@drawable/linearlayoutbg">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="198dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"

                        android:layout_marginTop="10dp"
                        android:text="Owner: Mr. Venkatraya"
                        android:textColor="#120505"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="80dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/Reachat"
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"

                            android:layout_marginTop="10dp"
                            android:text="Reach At:"
                            android:textColor="#A60E0E"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="parent" />

                        <LinearLayout
                            android:layout_width="400dp"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_marginStart="25dp"

                            android:layout_marginTop="1dp">

                            <ImageButton
                                android:id="@+id/phoneno"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_marginStart="10dp"

                                android:layout_marginTop="1dp"
                                android:foreground="@mipmap/phone"
                                android:src="?attr/selectableItemBackground"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                tools:src="@color/common_google_signin_btn_tint" />

                            <ImageButton
                                android:id="@+id/whatsapp"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_marginStart="10dp"

                                android:layout_marginTop="1dp"
                                android:foreground="@mipmap/whatsapp"
                                android:scaleType="fitCenter"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="375dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/building2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@mipmap/download" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="1dp"
                    android:text="Rs 12,000 / Month"
                    android:textColor="#730B0B"
                    android:textSize="25sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="0dp"
                    android:text="Semi Furnished, 1BHK Flat, 1200 sqft."
                    android:textColor="#0C0101"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"

                    android:layout_marginTop="1dp"
                    android:text="Flat no:402, 4th Floor, 5th X roads, infront of Forum Mall, HSR Layout, Bengaluru."
                    android:textColor="#120505"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent" />

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="15dp"

                    android:layout_marginTop="5dp"
                    android:background="@drawable/linearlayoutbg">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="198dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"

                        android:layout_marginTop="10dp"
                        android:text="Owner: Mr. Venkatraya"
                        android:textColor="#120505"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="80dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/Reachat2"
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"

                            android:layout_marginTop="10dp"
                            android:text="Reach At:"
                            android:textColor="#A60E0E"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="parent" />

                        <LinearLayout
                            android:layout_width="400dp"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_marginStart="25dp"

                            android:layout_marginTop="1dp">

                            <ImageButton
                                android:id="@+id/phoneno2"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_marginStart="10dp"

                                android:layout_marginTop="1dp"
                                android:foreground="@mipmap/phone"
                                android:src="?attr/selectableItemBackground"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                tools:src="@color/common_google_signin_btn_tint" />

                            <ImageButton
                                android:id="@+id/whatsapp2"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_marginStart="10dp"

                                android:layout_marginTop="1dp"
                                android:foreground="@mipmap/whatsapp"
                                android:scaleType="fitCenter"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>